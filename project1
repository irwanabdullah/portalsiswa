import React, { useState, useEffect, useMemo } from 'react';
import { 
  LayoutDashboard, Building2, Home, Users, FileText, 
  Wallet, HardHat, Settings, LogOut, Search, Plus, 
  CheckCircle, XCircle, AlertCircle, TrendingUp, Menu, X,
  FileCheck, Banknote, RefreshCcw, Edit, Trash2, Eye, Save, ChevronRight
} from 'lucide-react';
import { 
  BarChart, Bar, XAxis, YAxis, CartesianGrid, Tooltip as RechartsTooltip, ResponsiveContainer, LineChart, Line
} from 'recharts';

/**
 * CONFIGURATION & CLIENT INIT
 */
const supabaseUrl = 'https://ienzdbhntveiymonskdl.supabase.co';
const supabaseKey = 'eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpc3MiOiJzdXBhYmFzZSIsInJlZiI6ImllbnpkYmhudHZlaXltb25za2RsIiwicm9sZSI6ImFub24iLCJpYXQiOjE3Njk5ODM0NzcsImV4cCI6MjA4NTU1OTQ3N30.p2L42hh6ehauCeZQ44yAF_HFd1aDGAQcPzCr7KS_2Qg';

const STATUS_COLORS = {
  Available: "bg-green-100 text-green-800",
  Booking: "bg-yellow-100 text-yellow-800",
  Sold: "bg-red-100 text-red-800",
  Planning: "bg-gray-100 text-gray-800",
  Prospect: "bg-blue-100 text-blue-800",
  Akad: "bg-purple-100 text-purple-800",
  Completed: "bg-emerald-100 text-emerald-800",
  "On Progress": "bg-orange-100 text-orange-800",
  "Pending": "bg-slate-100 text-slate-800",
  "Lunas": "bg-green-100 text-green-800"
};

const MENUS = [
  { id: "dashboard", label: "Dashboard", icon: LayoutDashboard },
  { id: "projects", label: "Proyek", icon: Building2 },
  { id: "units", label: "Inventory Unit", icon: Home },
  { id: "consumers", label: "Konsumen", icon: Users },
  { id: "sales", label: "Transaksi", icon: Wallet },
  { id: "legal", label: "Legalitas", icon: FileCheck },
  { id: "progress", label: "Progress Fisik", icon: HardHat },
];

// --- SHARED UI COMPONENTS ---
const Card = ({ children, className = "" }) => (
  <div className={`bg-white rounded-xl shadow-sm border border-slate-200 p-6 ${className}`}>
    {children}
  </div>
);

const Badge = ({ children, className = "" }) => (
  <span className={`px-2.5 py-0.5 rounded-full text-xs font-medium ${className}`}>
    {children}
  </span>
);

const Modal = ({ isOpen, onClose, title, children }) => {
  if (!isOpen) return null;
  return (
    <div className="fixed inset-0 z-50 flex items-center justify-center bg-black/50 p-4 backdrop-blur-sm">
      <div className="bg-white rounded-xl shadow-xl w-full max-w-md overflow-hidden animate-in zoom-in duration-200">
        <div className="px-6 py-4 border-b flex justify-between items-center bg-slate-50">
          <h3 className="font-bold text-slate-800">{title}</h3>
          <button onClick={onClose} className="p-1 hover:bg-slate-200 rounded-full transition">
            <X size={20} />
          </button>
        </div>
        <div className="p-6 max-h-[80vh] overflow-y-auto">
          {children}
        </div>
      </div>
    </div>
  );
};

export default function App() {
  const [activeTab, setActiveTab] = useState("dashboard");
  const [userRole, setUserRole] = useState("Super Admin");
  const [isSidebarOpen, setIsSidebarOpen] = useState(true);
  const [loading, setLoading] = useState(false);
  const [supabaseClient, setSupabaseClient] = useState(null);

  // Data Stores
  const [projects, setProjects] = useState([]);
  const [units, setUnits] = useState([]);
  const [consumers, setConsumers] = useState([]);
  const [transactions, setTransactions] = useState([]);
  const [legalDocs, setLegalDocs] = useState([]);

  // Modal States
  const [modalType, setModalType] = useState(null); 
  const [selectedData, setSelectedData] = useState(null);
  const [isModalOpen, setIsModalOpen] = useState(false);

  // --- INITIALIZE SUPABASE ---
  useEffect(() => {
    const script = document.createElement('script');
    script.src = 'https://cdn.jsdelivr.net/npm/@supabase/supabase-js@2';
    script.async = true;
    script.onload = () => {
      const client = window.supabase.createClient(supabaseUrl, supabaseKey);
      setSupabaseClient(client);
    };
    document.head.appendChild(script);
  }, []);

  // --- DATA FETCHING ---
  const fetchData = async () => {
    if (!supabaseClient) return;
    setLoading(true);
    try {
      const [p, u, c, t, l] = await Promise.all([
        supabaseClient.from('projects').select('*').order('created_at', { ascending: false }),
        supabaseClient.from('units').select('*, projects(name)').order('block', { ascending: true }),
        supabaseClient.from('consumers').select('*').order('name', { ascending: true }),
        supabaseClient.from('transactions').select('*, units(block, number), consumers(name)').order('created_at', { ascending: false }),
        supabaseClient.from('legal_docs').select('*, units(block, number)').order('updated_at', { ascending: false })
      ]);

      setProjects(p.data || []);
      setUnits(u.data || []);
      setConsumers(c.data || []);
      setTransactions(t.data || []);
      setLegalDocs(l.data || []);
    } catch (err) {
      console.error("Fetch error:", err);
    } finally {
      setLoading(false);
    }
  };

  useEffect(() => {
    if (supabaseClient) {
      fetchData();
      const channel = supabaseClient.channel('realtime-db')
        .on('postgres_changes', { event: '*', schema: 'public' }, () => fetchData())
        .subscribe();
      return () => supabaseClient.removeChannel(channel);
    }
  }, [supabaseClient]);

  // --- GENERIC CRUD HANDLERS ---
  const handleSave = async (e) => {
    e.preventDefault();
    if (!supabaseClient) return;
    const formData = new FormData(e.target);
    const payload = Object.fromEntries(formData.entries());
    
    const tableMap = {
      project: 'projects',
      unit: 'units',
      consumer: 'consumers',
      transaction: 'transactions',
      legal: 'legal_docs',
      progress: 'units' // Progress update hits the units table
    };
    const table = tableMap[modalType];

    setLoading(true);
    try {
      let result;
      if (selectedData?.id) {
        result = await supabaseClient.from(table).update(payload).eq('id', selectedData.id);
      } else {
        result = await supabaseClient.from(table).insert([payload]);
      }

      if (result.error) throw result.error;
      setIsModalOpen(false);
      fetchData();
    } catch (err) {
      alert("Gagal menyimpan data: " + err.message);
    } finally {
      setLoading(false);
    }
  };

  const handleDelete = async (table, id) => {
    if (!window.confirm("Apakah Anda yakin ingin menghapus data ini?")) return;
    setLoading(true);
    try {
      const { error } = await supabaseClient.from(table).delete().eq('id', id);
      if (error) throw error;
      fetchData();
    } catch (err) {
      alert("Gagal menghapus: " + err.message);
    } finally {
      setLoading(false);
    }
  };

  const openForm = (type, data = null) => {
    setModalType(type);
    setSelectedData(data);
    setIsModalOpen(true);
  };

  // --- UI LAYOUTS ---
  const TableLayout = ({ title, onAdd, children, hideAdd = false }) => (
    <div className="space-y-4">
      <div className="flex justify-between items-center">
        <h2 className="text-xl font-black text-slate-800 tracking-tight">{title}</h2>
        {!hideAdd && (
          <button 
            onClick={onAdd}
            className="flex items-center gap-2 bg-indigo-600 text-white px-4 py-2 rounded-lg text-sm font-bold shadow-indigo-200 shadow-lg hover:bg-indigo-700 transition"
          >
            <Plus size={18} /> Tambah Data
          </button>
        )}
      </div>
      <Card className="p-0 overflow-hidden border-none shadow-md">
        <div className="overflow-x-auto">
          <table className="w-full text-sm text-left">
            <thead className="bg-slate-50 border-b border-slate-100">
              {children[0]}
            </thead>
            <tbody className="divide-y divide-slate-100">
              {children[1]}
            </tbody>
          </table>
        </div>
      </Card>
    </div>
  );

  // --- MODUL VIEWS ---
  const DashboardView = () => {
    const revenue = transactions.reduce((acc, curr) => acc + Number(curr.amount || 0), 0);
    return (
      <div className="space-y-6">
        <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
          <Card className="border-l-4 border-l-blue-600">
            <div className="flex justify-between items-start">
              <div><p className="text-xs text-slate-500 uppercase font-bold tracking-wider">Total Omzet</p><h3 className="text-xl font-black text-slate-800 mt-1">Rp {revenue.toLocaleString('id-ID')}</h3></div>
              <Wallet className="text-blue-200" size={24} />
            </div>
          </Card>
          <Card className="border-l-4 border-l-green-600">
            <div className="flex justify-between items-start">
              <div><p className="text-xs text-slate-500 uppercase font-bold tracking-wider">Unit Terjual</p><h3 className="text-xl font-black text-slate-800 mt-1">{units.filter(u => u.status === 'Sold').length} Unit</h3></div>
              <CheckCircle className="text-green-200" size={24} />
            </div>
          </Card>
          <Card className="border-l-4 border-l-yellow-600">
            <div className="flex justify-between items-start">
              <div><p className="text-xs text-slate-500 uppercase font-bold tracking-wider">Booking</p><h3 className="text-xl font-black text-slate-800 mt-1">{units.filter(u => u.status === 'Booking').length} Unit</h3></div>
              <TrendingUp className="text-yellow-200" size={24} />
            </div>
          </Card>
          <Card className="border-l-4 border-l-purple-600">
            <div className="flex justify-between items-start">
              <div><p className="text-xs text-slate-500 uppercase font-bold tracking-wider">Konsumen</p><h3 className="text-xl font-black text-slate-800 mt-1">{consumers.length} Orang</h3></div>
              <Users className="text-purple-200" size={24} />
            </div>
          </Card>
        </div>

        <div className="grid grid-cols-1 lg:grid-cols-3 gap-6">
          <Card className="lg:col-span-2">
            <h4 className="font-bold text-slate-700 mb-6">Status Inventory Unit</h4>
            <div className="h-72">
              <ResponsiveContainer width="100%" height="100%">
                <BarChart data={[
                  { name: 'Tersedia', total: units.filter(u => u.status === 'Available').length },
                  { name: 'Booking', total: units.filter(u => u.status === 'Booking').length },
                  { name: 'Terjual', total: units.filter(u => u.status === 'Sold').length },
                ]}>
                  <CartesianGrid strokeDasharray="3 3" vertical={false} stroke="#f1f5f9" />
                  <XAxis dataKey="name" axisLine={false} tickLine={false} tick={{fill: '#64748b', fontSize: 12}} />
                  <YAxis axisLine={false} tickLine={false} tick={{fill: '#64748b', fontSize: 12}} />
                  <RechartsTooltip cursor={{fill: '#f8fafc'}} />
                  <Bar dataKey="total" fill="#4f46e5" radius={[6, 6, 0, 0]} barSize={50} />
                </BarChart>
              </ResponsiveContainer>
            </div>
          </Card>
          <Card>
            <h4 className="font-bold text-slate-700 mb-4">Aktivitas Transaksi</h4>
            <div className="space-y-4">
              {transactions.slice(0, 5).map(trx => (
                <div key={trx.id} className="flex items-start gap-3 pb-3 border-b border-slate-50 last:border-0">
                  <div className="bg-blue-50 p-2 rounded-lg text-blue-600"><Banknote size={16} /></div>
                  <div className="flex-1">
                    <p className="text-xs font-bold text-slate-800">{trx.consumers?.name}</p>
                    <p className="text-[10px] text-slate-500">Unit {trx.units?.block}-{trx.units?.number}</p>
                    <p className="text-xs font-black text-indigo-600 mt-1">Rp {Number(trx.amount || 0).toLocaleString('id-ID')}</p>
                  </div>
                </div>
              ))}
            </div>
          </Card>
        </div>
      </div>
    );
  };

  const ProjectView = () => (
    <TableLayout title="Daftar Proyek" onAdd={() => openForm('project')}>
      <tr>
        <th className="px-6 py-4 text-slate-500 font-bold uppercase text-[10px]">Nama Proyek</th>
        <th className="px-6 py-4 text-slate-500 font-bold uppercase text-[10px]">Lokasi</th>
        <th className="px-6 py-4 text-slate-500 font-bold uppercase text-[10px]">Status</th>
        <th className="px-6 py-4 text-slate-500 font-bold uppercase text-[10px] text-right">Aksi</th>
      </tr>
      {projects.map(p => (
        <tr key={p.id} className="hover:bg-slate-50">
          <td className="px-6 py-4 font-black text-slate-700">{p.name}</td>
          <td className="px-6 py-4 text-slate-500">{p.location}</td>
          <td className="px-6 py-4"><Badge className={STATUS_COLORS[p.status]}>{p.status}</Badge></td>
          <td className="px-6 py-4 text-right">
            <button onClick={() => openForm('project', p)} className="p-1.5 text-slate-400 hover:text-indigo-600"><Edit size={16}/></button>
            <button onClick={() => handleDelete('projects', p.id)} className="p-1.5 text-slate-400 hover:text-red-600 ml-2"><Trash2 size={16}/></button>
          </td>
        </tr>
      ))}
    </TableLayout>
  );

  const MasterUnitView = () => (
    <TableLayout title="Inventory Unit" onAdd={() => openForm('unit')}>
      <tr>
        <th className="px-6 py-4 text-slate-500 font-bold uppercase text-[10px]">Blok/No</th>
        <th className="px-6 py-4 text-slate-500 font-bold uppercase text-[10px]">Proyek</th>
        <th className="px-6 py-4 text-slate-500 font-bold uppercase text-[10px]">Harga</th>
        <th className="px-6 py-4 text-slate-500 font-bold uppercase text-[10px]">Status</th>
        <th className="px-6 py-4 text-slate-500 font-bold uppercase text-[10px] text-right">Aksi</th>
      </tr>
      {units.map(unit => (
        <tr key={unit.id} className="hover:bg-slate-50">
          <td className="px-6 py-4 font-black text-slate-700">{unit.block}-{unit.number}</td>
          <td className="px-6 py-4 text-slate-600">{unit.projects?.name}</td>
          <td className="px-6 py-4 font-bold">Rp {Number(unit.price || 0).toLocaleString('id-ID')}</td>
          <td className="px-6 py-4"><Badge className={STATUS_COLORS[unit.status]}>{unit.status}</Badge></td>
          <td className="px-6 py-4 text-right">
            <button onClick={() => openForm('unit', unit)} className="p-1.5 text-slate-400 hover:text-indigo-600"><Edit size={16}/></button>
            <button onClick={() => handleDelete('units', unit.id)} className="p-1.5 text-slate-400 hover:text-red-600 ml-2"><Trash2 size={16}/></button>
          </td>
        </tr>
      ))}
    </TableLayout>
  );

  const ConsumerView = () => (
    <TableLayout title="Database Konsumen" onAdd={() => openForm('consumer')}>
      <tr>
        <th className="px-6 py-4 text-slate-500 font-bold uppercase text-[10px]">Nama Lengkap</th>
        <th className="px-6 py-4 text-slate-500 font-bold uppercase text-[10px]">Kontak</th>
        <th className="px-6 py-4 text-slate-500 font-bold uppercase text-[10px]">Status</th>
        <th className="px-6 py-4 text-slate-500 font-bold uppercase text-[10px] text-right">Aksi</th>
      </tr>
      {consumers.map(c => (
        <tr key={c.id} className="hover:bg-slate-50">
          <td className="px-6 py-4 font-black text-slate-700">{c.name}</td>
          <td className="px-6 py-4 text-slate-600">{c.phone}</td>
          <td className="px-6 py-4"><Badge className={STATUS_COLORS[c.status]}>{c.status}</Badge></td>
          <td className="px-6 py-4 text-right">
            <button onClick={() => openForm('consumer', c)} className="p-1.5 text-slate-400 hover:text-indigo-600"><Edit size={16}/></button>
            <button onClick={() => handleDelete('consumers', c.id)} className="p-1.5 text-slate-400 hover:text-red-600 ml-2"><Trash2 size={16}/></button>
          </td>
        </tr>
      ))}
    </TableLayout>
  );

  const SalesView = () => (
    <TableLayout title="Transaksi Penjualan" onAdd={() => openForm('transaction')}>
      <tr>
        <th className="px-6 py-4 text-slate-500 font-bold uppercase text-[10px]">Tanggal</th>
        <th className="px-6 py-4 text-slate-500 font-bold uppercase text-[10px]">Konsumen</th>
        <th className="px-6 py-4 text-slate-500 font-bold uppercase text-[10px]">Unit</th>
        <th className="px-6 py-4 text-slate-500 font-bold uppercase text-[10px]">Jumlah</th>
        <th className="px-6 py-4 text-slate-500 font-bold uppercase text-[10px]">Status</th>
        <th className="px-6 py-4 text-slate-500 font-bold uppercase text-[10px] text-right">Aksi</th>
      </tr>
      {transactions.map(t => (
        <tr key={t.id} className="hover:bg-slate-50">
          <td className="px-6 py-4 text-slate-600">{new Date(t.transaction_date).toLocaleDateString('id-ID')}</td>
          <td className="px-6 py-4 font-bold text-slate-700">{t.consumers?.name}</td>
          <td className="px-6 py-4 text-slate-600">Blok {t.units?.block}-{t.units?.number}</td>
          <td className="px-6 py-4 font-black text-indigo-600">Rp {Number(t.amount || 0).toLocaleString('id-ID')}</td>
          <td className="px-6 py-4"><Badge className={STATUS_COLORS[t.status]}>{t.status}</Badge></td>
          <td className="px-6 py-4 text-right">
            <button onClick={() => openForm('transaction', t)} className="p-1.5 text-slate-400 hover:text-indigo-600"><Edit size={16}/></button>
            <button onClick={() => handleDelete('transactions', t.id)} className="p-1.5 text-slate-400 hover:text-red-600 ml-2"><Trash2 size={16}/></button>
          </td>
        </tr>
      ))}
    </TableLayout>
  );

  const LegalView = () => (
    <TableLayout title="Legalitas Dokumen" onAdd={() => openForm('legal')}>
      <tr>
        <th className="px-6 py-4 text-slate-500 font-bold uppercase text-[10px]">Unit</th>
        <th className="px-6 py-4 text-slate-500 font-bold uppercase text-[10px]">Sertifikat</th>
        <th className="px-6 py-4 text-slate-500 font-bold uppercase text-[10px]">IMB/PBG</th>
        <th className="px-6 py-4 text-slate-500 font-bold uppercase text-[10px]">AJB</th>
        <th className="px-6 py-4 text-slate-500 font-bold uppercase text-[10px] text-right">Aksi</th>
      </tr>
      {legalDocs.map(l => (
        <tr key={l.id} className="hover:bg-slate-50">
          <td className="px-6 py-4 font-black text-slate-700">{l.units?.block}-{l.units?.number}</td>
          <td className="px-6 py-4 text-slate-600">{l.sertifikat_status}</td>
          <td className="px-6 py-4 text-slate-600">{l.imb_status}</td>
          <td className="px-6 py-4 text-slate-600">{l.ajb_status}</td>
          <td className="px-6 py-4 text-right">
            <button onClick={() => openForm('legal', l)} className="p-1.5 text-slate-400 hover:text-indigo-600"><Edit size={16}/></button>
            <button onClick={() => handleDelete('legal_docs', l.id)} className="p-1.5 text-slate-400 hover:text-red-600 ml-2"><Trash2 size={16}/></button>
          </td>
        </tr>
      ))}
    </TableLayout>
  );

  const ProgressView = () => (
    <TableLayout title="Progress Pembangunan" hideAdd={true}>
      <tr>
        <th className="px-6 py-4 text-slate-500 font-bold uppercase text-[10px]">Unit</th>
        <th className="px-6 py-4 text-slate-500 font-bold uppercase text-[10px]">Tipe</th>
        <th className="px-6 py-4 text-slate-500 font-bold uppercase text-[10px]">Progress (%)</th>
        <th className="px-6 py-4 text-slate-500 font-bold uppercase text-[10px]">Visualisasi</th>
        <th className="px-6 py-4 text-slate-500 font-bold uppercase text-[10px] text-right">Update</th>
      </tr>
      {units.map(u => (
        <tr key={u.id} className="hover:bg-slate-50">
          <td className="px-6 py-4 font-black text-slate-700">{u.block}-{u.number}</td>
          <td className="px-6 py-4 text-slate-600">{u.type}</td>
          <td className="px-6 py-4 font-bold text-indigo-600">{u.progress}%</td>
          <td className="px-6 py-4 w-48">
            <div className="w-full bg-slate-100 rounded-full h-2 overflow-hidden">
              <div 
                className="bg-indigo-600 h-full transition-all duration-500" 
                style={{ width: `${u.progress}%` }}
              ></div>
            </div>
          </td>
          <td className="px-6 py-4 text-right">
            <button onClick={() => openForm('progress', u)} className="p-1.5 bg-slate-100 text-slate-600 hover:bg-indigo-50 hover:text-indigo-600 rounded-lg transition flex items-center gap-1 ml-auto">
              <RefreshCcw size={14}/> <span className="text-xs font-bold">Update</span>
            </button>
          </td>
        </tr>
      ))}
    </TableLayout>
  );

  // --- MODAL FORM CONTENT ---
  const renderModalForm = () => {
    switch (modalType) {
      case 'project':
        return (
          <form onSubmit={handleSave} className="space-y-4">
            <div><label className="text-xs font-bold text-slate-500 uppercase">Nama Proyek</label><input name="name" defaultValue={selectedData?.name} className="w-full px-3 py-2 border rounded-lg" required /></div>
            <div><label className="text-xs font-bold text-slate-500 uppercase">Lokasi</label><input name="location" defaultValue={selectedData?.location} className="w-full px-3 py-2 border rounded-lg" /></div>
            <div><label className="text-xs font-bold text-slate-500 uppercase">Status</label>
              <select name="status" defaultValue={selectedData?.status || 'Planning'} className="w-full px-3 py-2 border rounded-lg">
                <option value="Planning">Planning</option><option value="On Progress">On Progress</option><option value="Completed">Completed</option>
              </select>
            </div>
            <button type="submit" className="w-full bg-indigo-600 text-white py-2 rounded-lg font-bold">Simpan</button>
          </form>
        );
      case 'unit':
        return (
          <form onSubmit={handleSave} className="space-y-4">
            <div className="grid grid-cols-2 gap-2">
              <div><label className="text-xs font-bold text-slate-500">Blok</label><input name="block" defaultValue={selectedData?.block} className="w-full px-3 py-2 border rounded-lg" required /></div>
              <div><label className="text-xs font-bold text-slate-500">Nomor</label><input name="number" defaultValue={selectedData?.number} className="w-full px-3 py-2 border rounded-lg" required /></div>
            </div>
            <div><label className="text-xs font-bold text-slate-500">Tipe</label><input name="type" defaultValue={selectedData?.type} placeholder="Cth: 36/72" className="w-full px-3 py-2 border rounded-lg" /></div>
            <div><label className="text-xs font-bold text-slate-500">Proyek</label>
              <select name="project_id" defaultValue={selectedData?.project_id} className="w-full px-3 py-2 border rounded-lg" required>
                <option value="">Pilih Proyek</option>{projects.map(p => <option key={p.id} value={p.id}>{p.name}</option>)}
              </select>
            </div>
            <div><label className="text-xs font-bold text-slate-500">Harga</label><input name="price" type="number" defaultValue={selectedData?.price} className="w-full px-3 py-2 border rounded-lg" /></div>
            <div><label className="text-xs font-bold text-slate-500">Status</label>
              <select name="status" defaultValue={selectedData?.status || 'Available'} className="w-full px-3 py-2 border rounded-lg">
                <option value="Available">Available</option><option value="Booking">Booking</option><option value="Sold">Sold</option>
              </select>
            </div>
            <button type="submit" className="w-full bg-indigo-600 text-white py-2 rounded-lg font-bold">Simpan</button>
          </form>
        );
      case 'consumer':
        return (
          <form onSubmit={handleSave} className="space-y-4">
            <div><label className="text-xs font-bold text-slate-500">Nama Lengkap</label><input name="name" defaultValue={selectedData?.name} className="w-full px-3 py-2 border rounded-lg" required /></div>
            <div><label className="text-xs font-bold text-slate-500">WhatsApp</label><input name="phone" defaultValue={selectedData?.phone} className="w-full px-3 py-2 border rounded-lg" required /></div>
            <div><label className="text-xs font-bold text-slate-500">Status</label>
              <select name="status" defaultValue={selectedData?.status || 'Prospect'} className="w-full px-3 py-2 border rounded-lg">
                <option value="Prospect">Prospect</option><option value="Booking">Booking</option><option value="Akad">Akad</option>
              </select>
            </div>
            <button type="submit" className="w-full bg-indigo-600 text-white py-2 rounded-lg font-bold">Simpan</button>
          </form>
        );
      case 'transaction':
        return (
          <form onSubmit={handleSave} className="space-y-4">
            <div><label className="text-xs font-bold text-slate-500">Konsumen</label>
              <select name="consumer_id" defaultValue={selectedData?.consumer_id} className="w-full px-3 py-2 border rounded-lg" required>
                <option value="">Pilih Konsumen</option>{consumers.map(c => <option key={c.id} value={c.id}>{c.name}</option>)}
              </select>
            </div>
            <div><label className="text-xs font-bold text-slate-500">Unit</label>
              <select name="unit_id" defaultValue={selectedData?.unit_id} className="w-full px-3 py-2 border rounded-lg" required>
                <option value="">Pilih Unit</option>{units.map(u => <option key={u.id} value={u.id}>{u.block}-{u.number} ({u.projects?.name})</option>)}
              </select>
            </div>
            <div><label className="text-xs font-bold text-slate-500">Jumlah Bayar</label><input name="amount" type="number" defaultValue={selectedData?.amount} className="w-full px-3 py-2 border rounded-lg" required /></div>
            <div><label className="text-xs font-bold text-slate-500">Status</label>
              <select name="status" defaultValue={selectedData?.status || 'Pending'} className="w-full px-3 py-2 border rounded-lg">
                <option value="Pending">Pending</option><option value="Lunas">Lunas</option>
              </select>
            </div>
            <button type="submit" className="w-full bg-indigo-600 text-white py-2 rounded-lg font-bold">Proses Transaksi</button>
          </form>
        );
      case 'legal':
        return (
          <form onSubmit={handleSave} className="space-y-4">
            <div><label className="text-xs font-bold text-slate-500">Pilih Unit</label>
              <select name="unit_id" defaultValue={selectedData?.unit_id} className="w-full px-3 py-2 border rounded-lg" required>
                <option value="">Pilih Unit</option>{units.map(u => <option key={u.id} value={u.id}>{u.block}-{u.number}</option>)}
              </select>
            </div>
            <div><label className="text-xs font-bold text-slate-500">Status Sertifikat</label><input name="sertifikat_status" defaultValue={selectedData?.sertifikat_status} placeholder="Cth: Pecah / Induk" className="w-full px-3 py-2 border rounded-lg" /></div>
            <div><label className="text-xs font-bold text-slate-500">Status IMB/PBG</label><input name="imb_status" defaultValue={selectedData?.imb_status} className="w-full px-3 py-2 border rounded-lg" /></div>
            <div><label className="text-xs font-bold text-slate-500">Status AJB</label><input name="ajb_status" defaultValue={selectedData?.ajb_status} className="w-full px-3 py-2 border rounded-lg" /></div>
            <button type="submit" className="w-full bg-indigo-600 text-white py-2 rounded-lg font-bold">Update Dokumen</button>
          </form>
        );
      case 'progress':
        return (
          <form onSubmit={handleSave} className="space-y-4">
            <h4 className="font-bold text-slate-800">Unit {selectedData?.block}-{selectedData?.number}</h4>
            <div>
              <label className="text-xs font-bold text-slate-500">Progress Pembangunan (%)</label>
              <input name="progress" type="range" min="0" max="100" defaultValue={selectedData?.progress || 0} className="w-full h-2 bg-slate-200 rounded-lg appearance-none cursor-pointer accent-indigo-600" onChange={(e) => {
                const val = e.target.value;
                document.getElementById('progressLabel').innerText = `${val}%`;
              }} />
              <div id="progressLabel" className="text-center font-black text-2xl text-indigo-600 mt-2">{selectedData?.progress || 0}%</div>
            </div>
            <button type="submit" className="w-full bg-indigo-600 text-white py-2 rounded-lg font-bold mt-4">Simpan Progress</button>
          </form>
        );
      default: return <p>Form sedang dikembangkan...</p>;
    }
  };

  return (
    <div className="flex h-screen bg-slate-100 overflow-hidden font-sans">
      {/* SIDEBAR */}
      <aside className={`bg-slate-900 text-white transition-all duration-300 ${isSidebarOpen ? 'w-64' : 'w-20'} flex flex-col shrink-0`}>
        <div className="h-20 flex items-center justify-between px-6 border-b border-slate-800">
          {isSidebarOpen ? (
            <div className="flex items-center gap-2 font-black text-xl italic"><span className="text-white">PRO</span><span className="text-indigo-500">DEV</span></div>
          ) : (
            <Building2 className="text-indigo-400 mx-auto" size={28} />
          )}
        </div>
        <nav className="flex-1 py-6 overflow-y-auto px-3 space-y-1">
          {MENUS.map((menu) => (
            <button
              key={menu.id}
              onClick={() => setActiveTab(menu.id)}
              className={`w-full flex items-center gap-3 px-4 py-3 rounded-xl transition-all ${
                activeTab === menu.id ? 'bg-indigo-600 text-white shadow-lg' : 'text-slate-400 hover:bg-slate-800 hover:text-white'
              }`}
            >
              <menu.icon size={20} className={!isSidebarOpen ? "mx-auto" : ""} />
              {isSidebarOpen && <span className="text-sm font-medium">{menu.label}</span>}
            </button>
          ))}
        </nav>
        <div className="p-4 border-t border-slate-800">
          <button className="flex items-center gap-3 w-full px-4 py-3 text-slate-400 hover:text-red-400 rounded-xl transition">
            <LogOut size={20} className={!isSidebarOpen ? "mx-auto" : ""} />
            {isSidebarOpen && <span className="text-sm">Log Out</span>}
          </button>
        </div>
      </aside>

      {/* MAIN CONTENT */}
      <main className="flex-1 flex flex-col min-w-0">
        <header className="h-20 bg-white border-b flex items-center justify-between px-8 sticky top-0 z-10">
          <div className="flex items-center gap-4">
            <button onClick={() => setIsSidebarOpen(!isSidebarOpen)} className="p-2 bg-slate-50 rounded-lg"><Menu size={20}/></button>
            <h1 className="font-black text-slate-800 text-lg">Manajemen Properti</h1>
          </div>
          <div className="flex items-center gap-3">
            <div className="hidden md:block text-right leading-tight">
              <p className="text-xs font-black">{userRole}</p>
              <p className="text-[10px] text-indigo-500 uppercase tracking-widest">Administrator</p>
            </div>
            <div className="h-10 w-10 bg-indigo-100 rounded-xl flex items-center justify-center text-indigo-600 font-bold">A</div>
          </div>
        </header>

        <div className="flex-1 overflow-y-auto p-8">
          <div className="max-w-7xl mx-auto">
            {loading && !isModalOpen && (
              <div className="fixed top-24 left-1/2 -translate-x-1/2 z-50 bg-white px-4 py-2 rounded-full shadow-lg border flex items-center gap-2">
                <RefreshCcw size={14} className="animate-spin text-indigo-600" />
                <span className="text-xs font-bold text-slate-600">Sinkronisasi...</span>
              </div>
            )}

            {activeTab === 'dashboard' && <DashboardView />}
            {activeTab === 'projects' && <ProjectView />}
            {activeTab === 'units' && <MasterUnitView />}
            {activeTab === 'consumers' && <ConsumerView />}
            {activeTab === 'sales' && <SalesView />}
            {activeTab === 'legal' && <LegalView />}
            {activeTab === 'progress' && <ProgressView />}
          </div>
        </div>
      </main>

      {/* MODAL */}
      <Modal isOpen={isModalOpen} onClose={() => setIsModalOpen(false)} title={`${selectedData ? 'Edit' : 'Tambah'} ${modalType}`}>
        {renderModalForm()}
      </Modal>
    </div>
  );
}
